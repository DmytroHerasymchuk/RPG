<Application x:Class="RPG.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RPG.CustomConverters"
             StartupUri="Startup.xaml">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <converters:FileToBitmapConverter x:Key="FileToBitmapConverter"/>
        <Style x:Key="CustomFont">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#Ancient Modern Tales"/>
        </Style>
        
    </Application.Resources>
    
</Application>
